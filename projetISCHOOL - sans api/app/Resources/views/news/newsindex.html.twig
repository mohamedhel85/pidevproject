{% extends 'base.html.twig' %}
{% block carousel %}
    <div id="Mycarousel" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->

        <div class="carousel-inner" >

            <div class="item active">
                <img src="img/{{NewPosts[0].image}}" alt="Slide one">
                <div class="carousel-caption">
                    <h4><a href="{{ path("postdetail",{'post_id': NewPosts[0].id}) }}"> {{NewPosts[0].title}} </a> </h4>
                    <p>
                        {{NewPosts[0].carouseldesc}}
                    </p>
                </div>
            </div><!--end of the item-->


            <div class="item">
                <img src="img/{{NewPosts[1].image}}" alt="Slide two">
                <div class="carousel-caption">
                    <h4><a href="{{ path("postdetail",{'post_id': NewPosts[1].id}) }}"> {{NewPosts[1].title}} </a> </h4>
                    <p>
                        {{NewPosts[1].carouseldesc}}
                    </p>
                </div>
            </div><!--end of the item-->

            <div class="item">
                <img src="img/{{NewPosts[2].image}}" alt="Slide three">
                <div class="carousel-caption">
                    <h4><a href="{{ path("postdetail",{'post_id': NewPosts[2].id}) }}"> {{NewPosts[2].title}} </a> </h4>
                    <p>
                        {{NewPosts[2].carouselDesc}}
                    </p>
                </div>
            </div><!--end of the item-->

            <div class="item">
                <img src="img/{{NewPosts[3].image}}" alt="Slide four">
                <div class="carousel-caption">
                    <h4><a href="{{ path("postdetail",{'post_id': NewPosts[3].id}) }}"> {{NewPosts[3].title}} </a> </h4>
                    <p>
                        {{NewPosts[3].carouselDesc}}
                    </p>
                </div>
            </div><!--end of the item-->

            <div class="item">
                <img src="img/{{NewPosts[4].image}}" alt="Slide five">
                <div class="carousel-caption">
                    <h4><a href="{{ path("postdetail",{'post_id': NewPosts[4].id}) }}"> {{NewPosts[4].title}} </a> </h4>
                    <p>
                        {{NewPosts[4].carouselDesc}}
                    </p>
                </div>
            </div><!--end of the item-->

        </div><!--end carousel-->



        <ul class="list-group slider-list col-md-4">



            <li data-target="#Mycarousel" data-slide-to="0" class="list-group-item ">
                <img src="img/{{NewPosts[0].image}}" class="img-thumbnail img-slider"/>
                <h4>{{NewPosts[0].title}} </h4>
                <p>{{NewPosts[0].carouselDesc}}</p>
            </li> <!-- end list item-->


            <li data-target="#Mycarousel" data-slide-to="1" class="list-group-item active">
                <img src="img/{{NewPosts[1].image}}" class="img-thumbnail img-slider"/>
                <h4>{{NewPosts[1].title}} </h4>
                <p>{{NewPosts[1].carouselDesc}}</p>
            </li> <!-- end list item-->

            <li data-target="#Mycarousel" data-slide-to="2" class="list-group-item active">
                <img src="img/{{NewPosts[2].image}}" class="img-thumbnail img-slider"/>
                <h4>{{NewPosts[2].title}} </h4>
                <p>{{NewPosts[2].carouselDesc}}</p>
            </li> <!-- end list item-->

            <li data-target="#Mycarousel" data-slide-to="3" class="list-group-item active">
                <img src="img/{{NewPosts[3].image}}" class="img-thumbnail img-slider"/>
                <h4>{{NewPosts[3].title}} </h4>
                <p>{{NewPosts[3].carouselDesc}}</p>
            </li> <!-- end list item-->

            <li data-target="#Mycarousel" data-slide-to="4" class="list-group-item active">
                <img src="img/{{NewPosts[4].image}}" class="img-thumbnail img-slider"/>
                <h4>{{NewPosts[4].title}} </h4>
                <p>{{NewPosts[4].carouselDesc}}</p>
            </li> <!-- end list item-->
        </ul>
        <!-- Controls -->
        <a class="left carousel-control" href="#Mycarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#Mycarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> <!--end  carousel with side bar -->
{% endblock %}
{% block body %}
    <!--blog post-->
    {% for post in NewsPosts %}
    <div class="well blog-post">
        <!--blog post structure here -->

        <h3><a href="{{ path("postdetail",{'post_id': post.id}) }}">{{ post.title }}</a></h3>
        <p class="post-info"> <i class="glyphicon glyphicon-time"></i>  Posted by {{ post.author }} on {{post.createdAt|date('Y-m-d')}} at {{post.createdAt|date('H:i')}} updated at {{post.updatedAt|date('H:i')}}</p>
        <hr>
        <img src="img/{{ post.image }}" class="img-responsive"/>
        <hr>
        <p>
            {{ post.carouselDesc }}
        </p>
        <a class="btn btn-primary " href="{{ path("postdetail",{'post_id': post.id}) }}"> Read more <span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
    {% endfor %}
    <!--blog post ends here -->




    <!--pager-->
    <center>
    <div class="navigation">
        {{ knp_pagination_render(NewsPosts) }}
    </div>
    </center>
    <!--end pager-->

{% endblock %}